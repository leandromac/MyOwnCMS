<% @panel_customs.each do |panel_custom| %>

<!DOCTYPE html>
<html>
<head>
  <title><%= panel_custom.name %></title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= favicon_link_tag "#{panel_custom.favicon}" %>

  <%= csrf_meta_tags %>




  <%= render partial: "layouts/shared_site/custom_css" %>

</head>
<body>

  <%= render partial: "layouts/shared_site/navbar" %>

<!-- START CONTENT -->
  <div class="container">
    <%= yield %>
  </div>
<!-- END CONTENT -->

  <%= render partial: "layouts/shared_site/footer" %>

  <p class="text-center">
    <%= link_to "https://github.com/leandromac/MyOwnCMS", target: '_blank' do %>
      <i class="fa fa-github fa-2x" style="margin-top:10px"></i>
    <% end %>
  </p>
  <script>
    $(".button-collapse").sideNav();
    $('.carousel.carousel-slider').carousel({fullWidth: true});
    $(document).ready(function() {
      Materialize.updateTextFields();
    });
  </script>
  <!--Import jQuery before materialize.js-->
</body>
</html>

<% end %>
