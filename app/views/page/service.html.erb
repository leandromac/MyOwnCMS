<h4 class="flow-text">Our Services</h4>

  <div class="row">

    <% @panel_services.each do |panel_service| %>
      <div class="col s12 m3">
        <div class="card">
          <div class="card-image">
            <img src="<%= panel_service.image %>">
            <%= link_to panel_service, class: 'btn-floating halfway-fab waves-effect waves-light red' do %>
              <i class="material-icons">add</i>
            <% end %>
          </div>
          <div class="card-content">
            <p class="card-title"><%= panel_service.title %></p>
            <p><%= truncate(panel_service.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>

  </div>