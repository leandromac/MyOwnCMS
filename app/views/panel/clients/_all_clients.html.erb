<h4><%= t('panel.clients.all') %> <small class="pull-right">( <%= clients_count %> )</small></h4>

<div class="row">
  <% @panel_clients.each do |panel_client| %>
  <div class="col-lg-2">
    <div class="panel panel-info">
        <div class="panel-body">
          <a href="<%= panel_client.link %>" target="_blank">
            <%= image_tag panel_client.image.url, class: "img-circle", style: 'width: 120px' %>
          </a>
        </div>
        <div class="panel-footer">
          <%= link_to edit_panel_client_path(panel_client), class: "btn btn-warning btn-circle" do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to panel_client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle pull-right" do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
    </div>
  </div>
  <% end %>
</div>