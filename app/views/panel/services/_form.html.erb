<%= form_for(@panel_service) do |f| %>
  <% if @panel_service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@panel_service.errors.count, "error") %> prohibited this panel_service from being saved:</h2>

      <ul>
      <% @panel_service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-12">

    <h1 class="page-header">
      <small><i class="fa fa fa-th"></i> Services</small>
    </h1>

  </div>
</div>

<div class="row well well-sm">
  <h4 class="text-center">Create a service</h4>
  <div class="col-lg-6">
    <div class="form-group input-group">
      <span class="input-group-addon">Title:</span>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Image:</span>
      <%= f.text_field :image, class: 'form-control', placeholder: 'Image' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.text_area :description, class: 'form-control', placeholder: 'Description...' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Save changes', class: 'btn btn-success btn-sm pull-right' %>
    </div>
  </div>
</div>

<% end %>
