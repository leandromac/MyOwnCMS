<%= form_for(@panel_style) do |f| %>
  <% if @panel_style.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@panel_style.errors.count, "error") %> prohibited this panel_style from being saved:</h2>

      <ul>
      <% @panel_style.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-12">

    <h1 class="page-header">
      <small><i class="fa fa-magic"></i> <%= t('panel.title.style') %></small>
      <%= f.submit t('panel.form.submit'), class: 'btn btn-success btn-sm pull-right' %>

    </h1>

  </div>
</div>

<% unless notice.blank? %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <%= notice %>
    </div>
<% end %>

<div class="row well well-sm">
  <h4 class="text-center"><%= t('panel.style.text') %></h4>

  <div class="col-lg-3">
    <div class="form-group input-group">
      <span class="input-group-addon">Navbar:</span>
      <%= f.color_field :nav_color, class: 'form-control' %>
    </div>
    <div class="form-group input-group">
      <span class="input-group-addon">Footer:</span>
      <%= f.color_field :footer_color, class: 'form-control' %>
    </div>
  </div>

  <div class="col-lg-3">
    <div class="form-group input-group">
      <span class="input-group-addon">Link:</span>
      <%= f.color_field :a_color, class: 'form-control' %>
    </div>
    <div class="form-group input-group">
      <span class="input-group-addon">Hover:</span>
      <%= f.color_field :a_hover_color, class: 'form-control' %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group input-group">
      <span class="input-group-addon">Google Font URL:</span>
      <%= f.text_field :font_link, class: 'form-control', placeholder: 'ex: https://fonts.googleapis.com/css?family=Bellefair', disabled: 'disabled' %>
    </div>
    <div class="form-group input-group">
      <span class="input-group-addon">Google Font Family:</span>
      <%= f.text_field :font_family, class: 'form-control', placeholder: "ex: 'Bellefair', serif;", disabled: 'disabled' %>
    </div>
  </div>

</div>

<div class="row well well-sm">
  <div class="col-lg-12">
    <label><%= t('panel.style.custom_css') %></label>
    <%= f.text_area :custom_css, class: 'form-control', placeholder: "#{t('panel.style.type_css')}", rows: '8' %>
  </div>
</div>

<% end %>
