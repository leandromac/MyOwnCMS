<%= form_for(@panel_custom) do |f| %>
  <% if @panel_custom.errors.any? %>
    <div id="error_explanation">


      <ul>
      <% @panel_custom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-12">

    <h1 class="page-header">
      <small><i class="fa fa-gear fa-fw"></i> Settings</small>
      <%= f.submit 'Save changes', class: 'btn btn-success btn-sm pull-right' %>
    </h1>

  </div>
</div>

<div class="row well well-sm">
  <div class="col-lg-6">
    <h4>Personal info</h4>
    <div class="form-group input-group">
      <span class="input-group-addon">Name:</span>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Logo:</span>
      <%= f.text_field :logo, class: 'form-control', placeholder: 'Logo' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Phone:</span>
      <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Email:</span>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Address:</span>
      <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
    </div>

  </div>

  <div class="col-lg-6">
    <div class="form-group">
      <label>About Us</label>
      <%= f.text_area :about, class: 'form-control', rows: '7' %>
    </div>

    <div class="form-group">
      <label>Text Contact</label>
      <%= f.text_field :text_contact, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="row well well-sm">
<h4 class="text-center">Socials media</h4>
  <div class="col-lg-6">

    <div class="form-group input-group">
      <span class="input-group-addon">Facebook:</span>
      <%= f.text_field :facebook, class: 'form-control', placeholder: 'Facebook' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Twitter:</span>
      <%= f.text_field :twitter, class: 'form-control', placeholder: 'Twitter' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Instagram:</span>
      <%= f.text_field :instagram, class: 'form-control', placeholder: 'Intagram' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="form-group input-group">
      <span class="input-group-addon">Youtube:</span>
      <%= f.text_field :youtube, class: 'form-control', placeholder: 'Youtube' %>
    </div>

    <div class="form-group input-group">
      <span class="input-group-addon">Linkdin:</span>
      <%= f.text_field :linkedin, class: 'form-control', placeholder: 'Linkedin' %>
    </div>

  </div>
</div>

<% end %>
