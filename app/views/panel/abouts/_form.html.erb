<%= form_for @panel_about, html: { multipart: true } do |f| %>
  <% if @panel_about.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @panel_about.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-12">

    <h1 class="page-header">
      <small><i class="fa fa-quote-left"></i> <%= t('panel.title.about') %></small>
      <%= f.submit t('panel.form.submit'), class: 'btn btn-success btn-sm pull-right' %>
    </h1>

  </div>
</div>

<% unless notice.blank? %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <%= notice %>
    </div>
<% end %>

<div class="row well well-sm">
  <h4 class="text-center"><%= t('panel.about.text') %></h4>
  <div class="col-lg-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><%= t('panel.about.title') %></span>
      <%= f.text_field :title, class: 'form-control', placeholder: '' %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><%= t('panel.about.image') %></span>
      <%= f.file_field :image, class: 'form-control', placeholder: '' %>
    </div>

  </div>

<div class="col-lg-12">
    <div class="form-group">
      <label><%= t('panel.about.about_text') %></label>
      <%= f.text_area :about, class: 'form-control', placeholder: '', rows: '4' %>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="form-group">
      <label><%= t('panel.about.impact_text') %></label>
      <%= f.text_area :blockquote, class: 'form-control', placeholder: '', rows: '2' %>
    </div>
  </div>

</div>

  <% end %>


